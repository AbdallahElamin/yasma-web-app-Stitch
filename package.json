{
  "name": "yasma-website-modernization",
  "version": "1.0.0",
  "description": "YASMA Contracting Co. website modernization project",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jsdom": "^27.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "css/**/*.css",
      "js/**/*.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jsdom|parse5)/)"
    ]
  }
}
